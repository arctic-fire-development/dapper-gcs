.jumbotron
	.row
		.col-md-4.col-md-offset-4
			h1 Plan the flight<span>.</span>
			.panel.panel-default
				.panel-heading Choose platform and mission type
				.panel-body
					form(role="form")
						div.form-group
							label(for="platformSelection") Platform
							select#platformSelection.form-control
								each platform in platforms
									option(value="#{platform.id}", selected=platform.id==currentPlatform)= platform.name

						div#payloadSelections.form-group
							if platforms[currentPlatform].payloads.length
								label(for="payloadSelection") Payload
								select#payloadSelection.form-control
									each payload in platforms[currentPlatform].payloads
										option(value="#{payload}", selected=payload==currentPayload)= payload

						div#routineSelections.form-group
							if platforms[currentPlatform].missions.length
								label(for="routineSelection") Routine
								select#routineSelection.form-control
									each mission in platforms[currentPlatform].missions
										option(value="#{mission}", selected=mission==currentMission)= mission

						div.form-group
							a.btn.btn-primary.btn-lg(href="/mission") Continue