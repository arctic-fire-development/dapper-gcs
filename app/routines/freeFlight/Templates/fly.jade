.freeFlight.row
	#widgets(style="display:none").col-md-2
		#speedWidget.widget
		#altitudeWidget.widget
		#batteryWidget.widget

		#controls.widget
			button.launch.btn.btn-block.btn-primary.btn-lg <span class="glyphicon glyphicon-plane"></span> Fly
			button.home.btn.btn-block.btn-success.btn-lg(style="display: none") <span class="glyphicon glyphicon-home"></span>  Home
			button.stop.btn.btn-block.btn-warning.btn-lg(style="display: none") <span class="glyphicon glyphicon-stop"></span>  Stop

	.col-md-10
		div#mapWidget(onclick="void(0);")

#waitForGps.alert.alert-info
	<div class="loader" data-initialize="loader" id="myLoader"></div>
